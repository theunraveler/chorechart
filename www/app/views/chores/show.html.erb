<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", group_chores_path(@chore.group)  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_group_chore_path(@chore.group) %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", @chore %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.chore.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @chore.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.chore.schedule_yaml", :default => t("activerecord.labels.schedule_yaml", :default => "Schedule yaml")) %>:</b>
          <%= @chore.schedule_yaml %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_chore_path(@chore), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), chore_path(@chore), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
