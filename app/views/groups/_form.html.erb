<div class="group">
  <%= f.label :name, t("activerecord.attributes.group.name", :default => "Name"), :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
  <span class="description">Ex: Home, Office, etc.</span>
</div>
        
<div class="well">
  <button class="btn primary" type="submit"><%= f.object.new_record? ? "Create group" : "Save" %></button>
	<%= link_to "Cancel", groups_path, :class => "btn" %>
</div>
