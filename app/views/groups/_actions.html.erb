<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to group_path(@group, :week => @week.prev_week), :class => 'btn' do %>
      <i class="icon-arrow-left"></i> Previous Week
    <% end %>
    <% if @week.this_week? %>
      <span class="btn btn-disabled">This week</span>
    <% else %>
      <%= link_to 'This week', group_path(@group), :class => 'btn' %>
    <% end %>
    <%= link_to group_path(@group, :week => @week.next_week), :class => 'btn' do %>
      Next Week <i class="icon-arrow-right"></i>
    <% end %>
  </div>

  <div class="pull-right">
    <div class="btn-group">
      <a href="javascript:print();" title="Print chore list" class="btn">
        <i class="icon-print"></i>
      </a>
      <% if can? :admin, group %>
        <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
          Manage <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% if can? :edit, group %>
            <li><%= link_to 'Edit Group', edit_group_path(group) %></li>
          <% end %>
          <% if can? :destroy, group %>
            <li><%= link_to 'Delete Group', group_path(group), :method => :delete, :confirm => "Are you sure you want to delete #{group}?" %></li>
          <% end %>
          <li class="divider"></li>
          <% if can? :edit, group %>
            <li><%= link_to 'Manage Chores', group_chores_path(group) %></li>
          <% end %>
          <% if can? :invite, group %>
            <li><%= link_to 'Manage Users', group_memberships_path(group) %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

</div>
