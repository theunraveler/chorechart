<ul class="tabs">
  <li class="first active"><%= link_to 'Log in', new_user_session_path %></li>
  <li class="last"><%= link_to 'Register', new_user_registration_path %></li>
</ul>

<div class="page-header">
  <h1>Log In Using</h1>
</div>

<div class="row">
  <div class="span8">
    <h3>&hellip;your <%= Rails.application.config.app_name %> account</h3>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="clearfix">
        <%= f.label :login %>
        <div class="input">
          <%= f.text_field :login, :class => 'xlarge' %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :password %>
        <div class="input">
          <%= f.password_field :password, :class => 'xlarge' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="clearfix">
          <div class="input">
            <ul class="inputs-list">
              <li><%= f.check_box :remember_me %> <%= f.label :remember_me %></li>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="well">
        <%= f.submit "Sign in", :class => 'btn primary' %>
      </div>
    <% end %>

    <%= render :partial => "devise/shared/links" %>
  </div>

  <div class="span8">
    <h3 class="title">&hellip;one of the following services</h3>
    <%= render 'authentications/providers' %>
  </div>
</div>
