<ul class="nav nav-tabs">
  <li class="first active"><%= link_to 'Log in', new_user_session_path %></li>
  <li class="last"><%= link_to 'Register', new_user_registration_path %></li>
</ul>

<div class="page-header">
  <h1>Log In Using&hellip;</h1>
</div>

<div class="row">
  <div class="span6">
    <h2>your Chorechart account</h2>
    <%= form_for resource, :url => session_path(resource_name) do |f| %>
      <%= f.text_field :login %>
      <%= f.password_field :password %>

      <% if devise_mapping.rememberable? %>
        <%= f.toggles do %>
          <%= f.check_box :remember_me, 'Remember me' %>
        <% end %>
      <% end %>

      <%= f.actions do %>
        <%= f.submit "Log in" %>
        <%= render :partial => "devise/shared/links" %>
      <% end %>
    <% end %>

  </div>

  <div class="span6">
    <h2>one of the following services</h2>
    <%= render 'authentications/providers' %>
  </div>
</div>
