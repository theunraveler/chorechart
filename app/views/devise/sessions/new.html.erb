<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to 'Log in', new_user_session_path %></li>
      <li class="last"><%= link_to 'Register', new_user_registration_path %></li>
    </ul>
  </div>  
  <div class="content">
    <h2 class="title">Log In Using</h2>
    <div class="inner">
      <div class="columns wat-cf">

        <div class="column left">
          <h3 class="title">&hellip;your <%= Rails.application.config.app_name %> account</h3> 
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <p><%= f.label :login %><br />
            <%= f.text_field :login %></p>

            <p><%= f.label :password %><br />
            <%= f.password_field :password %></p>

            <% if devise_mapping.rememberable? -%>
              <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
            <% end -%>

            <p><%= f.submit "Sign in" %></p>
          <% end %>

          <%= render :partial => "devise/shared/links" %>
        </div>

        <div class="column right">
          <h3 class="title">&hellip;one of the following services</h3>
          <%= render 'authentications/providers' %>
        </div>

      </div>
    </div>
  </div>
</div>
