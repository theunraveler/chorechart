<% content_for :page_title, "Chores for #{@group}" %>

<div class="page-header">          
  <h1>Chores for <%= @group %></h1>
</div>

<% if @chores.empty? %>
  <p>This group has no chores. <%= link_to "Add a new chore", new_group_chore_path(@group) %>.</p>
<% else %>
  <table class="zebra-striped">
    <thead>
      <tr>
        <th></th>
        <th>Difficulty</th>
        <th>Repeats</th>
        <th>Next Occurrence</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @chores.each do |chore| -%>
      <tr>
        <td>
          <%= chore %>
        </td>
        <td>
          <%= ChoresHelper::DIFFICULTY[chore.difficulty] %>
        </td>
        <td>
          <%= chore.schedule.to_s %>
        </td>
        <td>
          <%= fuzzy_date(chore.schedule.next_occurrence) %>
        </td>
        <td class="last">
          <%= link_to "Edit", edit_chore_path(chore) %> |
          <%= link_to "Delete", chore_path(chore), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
        </td>
      </tr>          
      <% end -%>
    </tbody>
  </table>
<% end %>

<p><%= link_to "&larr; Back to #{@group}".html_safe, @group %></p>

