
<div class="group">
  <%= f.label :name, t("activerecord.attributes.chore.name", :default => "Name"), :class => :label %>
  <%= f.text_field :name, :class => 'text_field' %>
  <span class="description">Ex: Laundry</span>
</div>

<div class="group">
  <%= f.label :difficulty, t("activerecord.attributes.chore.difficulty", :default => "Difficulty"), :class => :label %>
  <%= f.number_field :difficulty, :in => (1..5), :class => 'text_field' %>
</div>

<%= field_set_tag 'Schedule' do %>
  <%= f.fields_for :schedule_attributes, @chore.schedule_attributes do |schedule| %>
    <%= schedule.hidden_field :repeat, :value => 1 %>
    <p>
      Every <%= schedule.number_field :interval, :min => 1 %> 
      <%= schedule.select :interval_unit, options_for_select([['day(s)', 'day'], ['week(s)', 'week']], @chore.schedule_attributes.interval_unit) %>
    </p>
    <p id="day-selection">On
    <% Date::DAYNAMES.each do |day| %>
      <%= schedule.check_box day.downcase.to_sym %>
      <%= schedule.label day.downcase.to_sym %>
    <% end %></p>
  <% end %>
<% end %>

<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>
  <span class="text_button_padding"><%= t("web-app-theme.or", :default => "or") %></span>
	<%= link_to t("web-app-theme.cancel", :default => "Cancel"), group_chores_path(@chore.group), :class => "text_button_padding link_button" %>
</div>
