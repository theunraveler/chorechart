<!DOCTYPE html>
<html>
<head>
  <% if content_for? :page_title %>
    <title><%= yield :page_title %> | <%= Rails.application.config.app_name %></title>
  <% else %>
    <title><%= Rails.application.config.app_name %></title>
  <% end %>
  <%= stylesheet_link_tag :defaults %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header class="topbar" data-dropdown="dropdown">
    <div class="fill">
      <div class="container">
        <a class="brand" href="/"><%= Rails.application.config.app_name %></a>
        <% if user_signed_in? %>
          <nav id="main-navigation">
            <%= render 'shared/main_nav' %>
          </nav>
          <nav id="user-navigation">
            <%= render 'shared/user_nav' %>
          </nav>
        <% else %>
          <nav id="user-navigation">
            <%= render 'shared/anon_nav' %>
          </nav>
        <% end %>
      </div>
    </div>
  </header>    
  <div id="wrapper" class="container">
    <div class="row">
      <div id="main span16">
        <% if !flash.empty? %>
          <div id="flash">
            <%= render 'shared/flash', :flash => flash %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>    
  <footer>
    <div class="container">
      <p class="pull-right"><a href="#">&uarr; Back to top</a></p>
      <p>
        Copyright &copy; <%= Time.now.year %> <a class="external" href="http://theunraveler.com">theunraveler</a> | 
        <a href="mailto:jake@theunraveler.com">Feedback</a>
      </p>
    </div>
  </footer>
</body>
</html>
