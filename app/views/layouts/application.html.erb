<!DOCTYPE html>
<html>
<head>
  <title>Chorechart</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <header>
    <h1>Chorechart</h1>
    <div id="project-selector">
      <%= render 'shared/project_selector' %>
    </div>
    <div id="user-info">
      <%= render 'shared/user_info' %>
    </div>
  </header>

  <section id="container">
    <% if notice || alert %>
      <div id="flash">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <div id="content">
      <%= yield %>
    </div>
  </section>

</body>
</html>
