<!DOCTYPE html>
<html>
<head>
  <% if content_for? :page_title %>
    <title><%= yield :page_title %> | <%= Rails.application.config.app_name %></title>
  <% else %>
    <title><%= Rails.application.config.app_name %></title>
  <% end %>
  <%= stylesheet_link_tag :defaults %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <header class="topbar" data-dropdown="dropdown">
    <div class="fill">
      <div class="container">
        <a class="brand" href="/"><%= Rails.application.config.app_name %></a>
        <nav id="user-navigation">
          <%= render 'shared/user_info' %>
        </nav>
      </div>
    </div>
  </header>    
  <div id="wrapper" class="container">
    <% if !flash.empty? %>
      <div id="flash">
        <%= render 'shared/flash', :flash => flash %>
      </div>
    <% end %>
    <div class="row">
      <div id="main" class="span12">
        <%= yield %>
        <div id="footer">
          <div class="block">
            <p>
              Copyright &copy; <%= Time.now.year %> <a class="external" href="http://theunraveler.com">theunraveler</a> | 
              <a href="mailto:jake@theunraveler.com">Feedback</a>
            </p>
          </div>      
        </div>
      </div>
      <div id="sidebar" class="span4">
        <%= yield :sidebar %>
        <% if user_signed_in? %>
          <div class="well">
            <%= render 'shared/user_chores' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>    
</body>
</html>
