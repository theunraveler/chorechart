<% providers ||= [] %>
<div class="auth_providers">
  <% if !providers.include?('twitter') %>
    <a href="/auth/twitter" class="auth_provider">
      <span class="icon twitter inline">Twitter</span>
    </a>
  <% end %>
  <% if !providers.include?('facebook') %>
    <a href="/auth/facebook" class="auth_provider">
      <span class="icon facebook inline">Facebook</span>
    </a>
  <% end %>
  <% if !providers.include?('github') %>
    <a href="/auth/github" class="auth_provider">
      <span class="icon github inline">Github</span>
    </a>
  <% end %>
  <% if !providers.include?('google_oauth2') %>
    <a href="/auth/google_oauth2" class="auth_provider">
      <span class="icon google_oauth2 inline">Google</span>
    </a>
  <% end %>
  <div class="clearer"></div>
</div>
