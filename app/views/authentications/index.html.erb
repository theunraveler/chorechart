<div class="page-header">
  <h1>Your Account</h1>
</div>

<ul class="tabs">
  <li class="first"><%= link_to 'Account Info', edit_user_registration_path %></li>
  <li class="active last"><%= link_to 'Linked Accounts', authentications_path %></li>
</ul>

<% if !@authentications.empty? %>
  <% unless @authentications.empty? %>
    <h3>You can sign in to Chorechart using:</h3>
    <div id="my-authentications" class="row">
      <% @authentications.each do |authentication| %>
        <div class="span4"><div class="breadcrumb">
          <%= link_to "x", authentication, :confirm => 'Are you sure you want to remove this linked account?', :method => :delete, :class => "close" %>
          <div class="pull-left">
            <span class="icon <%= authentication.provider %>"></span>
          </div>
          <div class="provider"><%= authentication %></div>
          <span class="help-block"><%= authentication.uid %></span>
          <div class="clearer"></div>
        </div></div>
      <% end %>
    </div>
  <% end %>
  <h3>Link your accounts:</h3>
<% else %>
  <h3>Sign in through one of these services:</h3>
<% end %>

<div class="well">
  <%= render 'providers', :providers => @providers %>
</div>
