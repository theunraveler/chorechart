<div class="page-header">
  <h1 class="pull-left">Your Account</h1>
  <span class="icon info tooltip pull-right" title="Linking other accounts to your Chorechart account allows you to sign in to Chorechart without entering your username or password.">?</span>
  <div class="clearer"></div>
</div>

<ul class="tabs">
  <li class="first"><%= link_to 'Account Info', edit_user_registration_path %></li>
  <li class="active last"><%= link_to 'Linked Accounts', authentications_path %></li>
</ul>

<% if @authentications.any? %>
  <% unless @authentications.empty? %>
    <h3>You can sign in to Chorechart using</h3>
    <div id="my-authentications" class="row">
      <%= render @authentications %>
    </div>
  <% end %>
<% end %>

<% unless @authentications.count == 4 %>
  <h3>Link your accounts</h3>
  <div class="well">
    <%= render 'providers', :providers => @providers %>
  </div>
<% end %>
