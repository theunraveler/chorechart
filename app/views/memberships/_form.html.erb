<%= form_for [@group, @membership] do |f| %>

  <div class="clearfix">
    <%= f.label :user_id, 'Username or email' %>
    <div class="input">
      <%= f.text_field :user_id, :class => 'xlarge' %>
      <script type="text/javascript">
        $(document).ready(function() {
            $('#membership_user_id').autocomplete({
              source: <%= @user_autocomplete.collect(&:email).to_s.html_safe %>  
            });    
        });
      </script>
    </div>
  </div>

  <div class="clearfix">
    <%= label_tag 'Roles in group' %>
    <div class="input">
      <ul class="inputs-list">
        <li><%= f.check_box :is_admin %><%= f.label :is_admin, 'Admin' %></li>
      </ul>
    </div>
  </div>

  <div class="clearfix">
    <div class="input">
      <%= f.submit "Add user", :class => 'btn primary' %>
    </div>
  </div>
    

<% end %>
