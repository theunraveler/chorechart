<div class="block">
  <div class="content">
    <div class="inner">
      <h2 class="title">Manage Users for <%= @group %></h2>

      <table class="table">
      <% @memberships.each do |membership| %>
        <tr class="<%= cycle "odd", "even" %>">
          <td><%= membership.user %> (<%= membership.user.email %>)</td>
          <td><%= membership.role.try(:capitalize) %></td>
          <% if can? :destroy, membership %>
            <td><%= link_to 'Remove', membership, :confirm => "Are you sure you want to remove #{membership.user} from this group?", :method => :delete %></td>
          <% end %>
        </tr>
      <% end %>
        <tr>
          <td colspan="2"><%= render 'form' %></td>
        <tr>
      </table>

    </div>
  </div>
</div>
