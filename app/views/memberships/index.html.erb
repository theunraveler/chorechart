<div class="page-header">
  <h1>Manage Users for <%= @group %></h1>
</div>

<table class="zebra-striped">
  <% @memberships.each do |membership| %>
    <tr>
      <td><%= membership.user %> (<%= membership.user.email %>)</td>
      <td><%= membership.role.try(:capitalize) %></td>
      <% if can? :destroy, membership %>
        <td><%= link_to 'Remove', membership, :confirm => "Are you sure you want to remove #{membership.user} from #{@group}?", :method => :delete %></td>
      <% end %>
    </tr>
  <% end %>
  <tr>
    <td colspan="3"><%= render 'form' %></td>
  <tr>
</table>

<p><%= link_to "&larr; Back to #{@group}".html_safe, @group %></p>
