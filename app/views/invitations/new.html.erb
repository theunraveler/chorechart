<div class="page-header">
  <h1>Invite users to <%= @group %></h1>
</div>

<%= form_for @invitation, :url => group_invitations_path do |f| %>
  <%= f.email_field :email %>
  <%= f.hidden_field :group_id, :value => @group.id %>

  <%= f.actions do %>
    <%= f.submit 'Invite user' %>
  <% end %>

<% end %>
