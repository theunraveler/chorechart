<% if user_signed_in? %>
  <div class="pull-right">
    <%= avatar_image(current_user, 36) %>
  </div>
  <ul class="nav secondary-nav">
    <li class="dropdown">
      <a class="dropdown-toggle" href="#">Hello, <%= current_user %></a>
      <ul class="dropdown-menu">
        <li><%= link_to "Dashboard", user_root_path %></li>
        <li><%= link_to "Manage Groups", groups_path %></li>
        <li><%= link_to "Account", edit_user_registration_path %></li>
        <li><%= link_to "Log out", destroy_user_session_path %></li>
      </ul>
    </li>
  </ul>
<% else %>
  <ul class="no-user-menu">
    <li><%= link_to "Log in", new_user_session_path %></li>
    <li><%= link_to "Register", new_user_registration_path %></li>
  </ul>
<% end %>

