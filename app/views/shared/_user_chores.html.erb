<div id="my-chores" class="well">
  <h3>Your Chores</h3>
  <% (Time.current.to_date..Time.current.to_date.advance(:days => 4)).each do |date| %>
    <div class="chore-day">
      <div class="page-header"><p><%= fuzzy_date(date) %></p></div>
      <% if !chores.has_key?(date) || chores[date].empty? %>
        <p class="help-inline"><em>Nothing! Enjoy your day off!</em></p>
      <% else %>
        <ul>
          <% chores[date].each do |assignment| %>
            <li><%= assignment.chore %> <span class="label"><%= link_to assignment.group, assignment.group %></span></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>
