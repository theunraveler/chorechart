<div id="my-chores" class="block">
  <h3>Your Chores</h3>
  <% week = current_user.assignments_for(Date.today, Date.today.advance(:days => 5)).group_by(&:date) %>
  <% week.sort.each do |day, assignments| %>
    <div class="page-header"><p><%= fuzzy_date(day) %></p></div>
    <% if assignments.empty? %>
      <span class="empty-chore-message">Nothing! Enjoy your day off!</span>
    <% else %>
      <ul>
        <% assignments.each do |assignment| %>
          <li><%= assignment.chore %> in <%= link_to assignment.chore.group, assignment.chore.group %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
